@model UserDataViewModel
@{
    ViewData["Title"] = "CreateUser";
}

<h2>CreateUser</h2>
<form id="frmCreateUser" action="/User/Create" method="post">
    <div class="row">
        <div class="form-group">
            <label for="Variables">Usuario:</label>
            @Html.TextBoxFor(x => x.Usuario)
        </div>
        <div class="form-group">
            <label for="Variables">Contraseña:</label>
            @Html.PasswordFor(x => x.Password)
        </div>
        <div class="form-group">
            <label for="Variables">Repita Contraseña:</label>
            @Html.PasswordFor(x => x.PasswordRepeated)
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Aceptar" />
        </div>

        <label class="alert-danger">@Html.ValidationMessage("createUserError")</label>
    </div>
</form>
