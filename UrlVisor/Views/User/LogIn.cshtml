@model LogInViewModel

@{
    ViewData["Title"] = "Iniciar Sesion";
}

<h2>LogIn</h2>

<form id="frmIniciarSesion" action="/User/Login" method="post">
    <div class="row">
        <div class="form-group">
            <label for="Variables">Usuario:</label>
            @Html.TextBoxFor(x => x.User)
        </div>
        <div class="form-group">
            <label for="Variables">Contraseña:</label>
            @Html.PasswordFor(x => x.Password)
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Aceptar" />
        </div>

        <label class="alert-danger">@Html.ValidationMessage("logInError")</label>        
    </div>
</form>

@Html.ActionLink("Crear Usuario","CreateUser","User")